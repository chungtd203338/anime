<style>
    body {
        background-color: #FFE5E7;
    }
</style>
<div class="mt-4">
    <div class="row">
        <div class="col-lg-9">
            <h3>Cập nhật phim</h3>

            <form class="mt-4" method="POST" action="/films/{{film._id}}?_method=PUT">
                <div class="form-group">
                    <label for="name">Tên phim</label>
                    <input type="text" class="form-control" value="{{film.name}}" id="name" name="name" />
                </div>
                <div class="form-group">
                    <label for="description">Mô tả</label>
                    <textarea class="form-control" id="description" name="description">{{film.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="videoId">Video ID</label>
                    <input type="text" class="form-control" value="{{film.videoId}}" id="videoId" name="videoId" />
                </div>
                <div class="form-group">
                    <label for="listId">List ID</label>
                    <input type="text" class="form-control" value="{{film.listId}}" id="listId" name="listId" />
                </div>
                <div class="form-group">
                    <label for="genre">Mô tả</label>
                    <input type="text" class="form-control" value="{{film.genre}}" id="genre" name="genre" />
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
        </div>
        <div class="col-lg-0.1">
            <div class="abc"></div>
        </div>
    </div>
</div>